{
  "manifest_version": 3,
  "name": "CLAUDE-Content Filter & Highlighter",
  "version": "1.0",
  "description": "Filter and highlight web content",
  "permissions": [
      "activeTab",
      "storage"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
  }]
}
