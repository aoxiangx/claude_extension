{
  "manifest_version": 3,
  "name": "CLAUDE-Advanced Text Highlighter",
  "version": "1.0",
  "description": "Highlight text with multiple colors and persistent storage",
  "permissions": [
      "activeTab",
      "storage",
      "scripting"
  ],
  "action": {
      "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
  }]
}
